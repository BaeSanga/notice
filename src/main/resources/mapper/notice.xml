<mapper namespace="com.bluedigm.notice.NoticeMapper">

    <select id="getNoticeList" resultType="com.bluedigm.notice.NoticeDto">
        select
            id
            , title
            , userId
            , hit
            , regDate

        from tb_notice
    </select>

    <select id="getNotice" resultType="com.bluedigm.notice.NoticeDto">
        SELECT
            id
             , userId
             , title
             , contents
             , regDate
             , hit

        FROM tb_notice

        WHERE id = #{id}

    </select>

